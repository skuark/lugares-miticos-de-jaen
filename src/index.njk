---
layout: layouts/main.njk
pagination:
  data: all_pages.all_home_pages
  size: 1
  alias: indexPage
eleventyComputed:
  title: "{{ i18n[indexPage.locale].siteTitle }}"
  permalink: "{{ indexPage.locale }}/index.html"
  locale: "{{ indexPage.locale }}"
bodyClass: "home-page"
includeLeaflet: true
---


<div class="categories-section">
  <h2 class="categories-section-title">{{ i18n[indexPage.locale].home.discover }}</h2>

  <div class="article-grid">
    {%- for category in categories_list[indexPage.locale] -%}
      <article class="article-card">
        <a href="/{{ locale }}/categories/{{ category.slug }}" class="article-card--link">
          <div class="article-card--image" role="img" aria-label="{{ category.name }}" style="
            background-image: url('{% static_image '/files/categories/' + category.imageSlug + '.jpg' %}');
          "></div>
          <div class="article-card--content">
            <h2 class="article-card--title">{{ category.name }}</h2>
          </div>
        </a>
      </article>
    {%- endfor -%}
  </div>
</div>

<div class="localities-section">
  <h2 class="localities-title">{{ i18n[indexPage.locale].home.exploreLocalities }}</h2>

  <div class="localities-container">
    <ul class="localities-list">
      {%- for locality in localities_list -%}
        <li class="locality-item">
          <a href="/{{ locale }}/localities/{{ locality.slug }}"
             class="locality-link"
             data-locality-id="{{ locality.id }}">{{ locality.name }}{% if locality.articleCount %} ({{ locality.articleCount }}){% endif %}</a>
        </li>
      {%- endfor -%}
    </ul>
  </div>

  <div class="localities-map-container">
    <div id="localities-map" class="localities-map"></div>
  </div>
</div>
